@if (Model.Pagin.MaxPage > 1)
{
    <nav aria-label="navigation page block" class="my-3">
        <ul class="pagination justify-content-center">
            <li class="page-item shadow-lg">
                <a class="page-link" href="@Url.RouteUrl(Model.Pagin.Controller,
                                          new { controller = "List",
                                              action = Model.Pagin.Action,
                                              search = Model.Pagin.Search,
                                              categ = Model.Pagin.Category,
                                              id = 1 })"
                >Первая</a>
            </li>
            @foreach (var item in Model.Pagin.PaginatorTable)
            {
                if (Model.Pagin.CurrentPage == item)
                {
                    <li class="page-item active shadow-lg">
                        <a class="page-link" href="@Url.RouteUrl(Model.Pagin.Controller,
                                                  new { controller = "List",
                                                      action = Model.Pagin.Action,
                                                      search = Model.Pagin.Search,
                                                      categ = Model.Pagin.Category,
                                                      id = item })"
                        >@item</a>
                    </li>
                }
                else
                {
                    <li class="page-item shadow-lg">
                        <a class="page-link" href="@Url.RouteUrl(Model.Pagin.Controller,
                                                  new { controller = "List",
                                                      action = Model.Pagin.Action,
                                                      search = Model.Pagin.Search,
                                                      categ = Model.Pagin.Category,
                                                      id = item })"
                        >@item</a>
                    </li>
                }
            }
            <li class="page-item shadow-lg">
                <a class="page-link" href="@Url.RouteUrl(Model.Pagin.Controller,
                                          new { controller = "List",
                                              action = Model.Pagin.Action,
                                              search = Model.Pagin.Search,
                                              categ = Model.Pagin.Category,
                                              id = Model.Pagin.MaxPage })"
                >Последняя (@Model.Pagin.MaxPage)</a>
            </li>
        </ul>
    </nav>
}