            <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
            </li>
        </ul>
        @using (Html.BeginForm("Search", "List", FormMethod.Get, new { @class = "form-inline mt-2 mt-md-0" }))
        {
            <input class="form-control mr-sm-2" type="text" placeholder="Имя программы..." aria-label="Search" name="search" id="search" />
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Поиск</button>
