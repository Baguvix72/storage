@{
    int index = 1;
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @{ index = 1;}
        @foreach (var item in Model.Imgs)
        {
            if (index == 1)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@index" class="active shadow-lg"></li>
                { index++; }
            }
            else
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@index" class="shadow-lg"></li>
                { index++; }
            }
        }
    </ol>
    <div class="carousel-inner itemIMGWrapper">
        @{ index = 1;}
        @foreach (var item in Model.Imgs)
        {
            if (index == 1)
            {
                <div class="carousel-item active imgWBlock">
                    <img class="itemIMG d-block" src="@item.href" alt="First slide">
                </div>
                { index++; }
            }
            else
            {
                <div class="carousel-item imgWBlock">
                    <img class="itemIMG d-block" src="@item.href" alt="First slide">
                </div>
                { index++; }
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>