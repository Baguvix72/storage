@{
    ViewBag.Title = "Index";
}

<div class="container mt-2">
    <div class="card mb-3">
        {% include "Post/inc_item/inc_desc/carous.html" %}
        <div class="card-body">
            <h4 class="card-title"><b>@ViewBag.Post.Name</b></h4>
            <p class="card-text">
                <b>Официальный сайт:</b>
                <br>
                <b>Платформа:</b>
            </p>
            <p class="card-text">
                <b>Описание:</b>
                <br>
                @{ int index = 1;}
                @Html.Raw(ViewBag.Post.Desc)
                @foreach (var item in ViewBag.Post.Spoilers)
                {
                    <div class="accordion" id="accordionExample">
                        <div class="card">
                            <div class="card-header" id="@string.Format("heading{0}", index)">
                                <h5 class="mb-0">
                                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="@string.Format("#collapse{0}", index)" aria-expanded="false" aria-controls="collapseOne">
                                        @Html.Raw(item.name)
                                    </button>
                                </h5>
                            </div>
                            <div id="@string.Format("collapse{0}", index)" class="collapse" aria-labelledby="@string.Format("heading{0}", index)" data-parent="#accordionExample">
                                <div class="card-body">
                                    @Html.Raw(item.content)
                                    @{ index++;}
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </p>
            {% for Item in Spoilers %}
            {% include "Post/inc_item/inc_desc/collap.html" with Item=Item %}
            {% endfor %}
        </div>
    </div>
</div>

